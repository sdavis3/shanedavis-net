*{box-sizing:border-box}html{line-height:1.6}body{margin:0;font-family:sans-serif;background:#212121;color:#f5e3e0}h1,h2,h3,h4,h5,h6{color:#f5f5f5}a{color:#fff;text-decoration:none}a:hover{color:#f5f5f5;transition:color .8s}pre{overflow:auto}.app-header{padding:2.5em;background:#d35050;text-align:center}.app-header-avatar{max-width:15rem;max-height:15rem;border-radius:100%;border:.5rem solid #fff}.app-container{padding:2.5rem}.app-header-social{font-size:2em;color:#f5f5f5}.app-header-social a{margin:0 .1em}.icon{display:block-inline;width:1em;height:1em;vertical-align:-.125em}.tag{background:rgba(255,255,255,.1);margin:0 .2em;padding:.2em .4em;border-radius:.2em;transition:background .8s}.tag:hover{background:rgba(255,255,255,.3)}.post-title{color:#f5f5f5}.post-content pre{border-left:.4em solid rgba(255,255,255,.8);padding-left:1em}.post-meta{font-size:.8em}.posts-list{padding:0}.posts-list-item{list-style:none;border-bottom:1px dashed rgba(255,255,255,.3);padding:.4em 0}.posts-list-item-description{display:block;font-size:.8em}@media(min-width:940px){.app-header{position:fixed;top:0;left:0;width:20rem;min-height:100vh}.app-container{max-width:65rem;margin-left:20rem}}